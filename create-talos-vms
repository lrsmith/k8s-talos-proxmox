# talos-wrkr-01
pvesm alloc local-lvm 211 '' 100G

qm create 211                                         \
--name talos-wrkr-01                                    \
--cdrom local:iso/talos.iso             \
--ostype other                                          \
--ide0 local-lvm:vm-211-disk-0,size=100G                 \
--sockets 1                                             \
--cores 4                                               \
--net0 e1000=52:05:42:00:02:11,bridge=vmbr0,firewall=1  \
--scsihw virtio-scsi-pci                                \
--memory 16192                                        \
--onboot no
