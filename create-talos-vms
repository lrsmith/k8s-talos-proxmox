# talos-mstr-01
pvesm alloc local-lvm 201 '' 25G

qm create 201                                         \
--name talos-mstr-01                                    \
--cdrom local:iso/talos.iso             \
--ostype other                                          \
--ide0 local-lvm:vm-201-disk-0,size=25G                 \
--sockets 1                                             \
--cores 1                                               \
--net0 e1000=52:05:42:00:02:01,bridge=vmbr0,firewall=1  \
--scsihw virtio-scsi-pci                                \
--memory 1024                                           \
--onboot no

